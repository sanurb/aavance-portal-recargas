---
import { Notification } from 'accessible-astro-components'
import { Icon } from 'astro-icon'
---

<section class="bg-gray-50 dark:bg-gray-900">
  <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
      <div class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
          <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
              <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
                Iniciar sesión en su cuenta
              </h1>
              <form class="space-y-4 md:space-y-6" method="post">
                <Notification type="warning" class="notification hidden justify-center items-center p-4 bg-red-100 rounded-md">
                    <Icon pack="majesticons" name="emoji-sad-line" class="text-red-500" />
                    <p class="ml-2 text-sm text-red-600">Combinación incorrecta de cédula y PIN. Por favor, intente de nuevo.</p>
                </Notification>
                <div class="flex flex-col">
                    <label for="documento" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Cédula </label>
                    <input type="text" name="documento" required class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
                </div>
                <div class="flex flex-col">
                    <label for="pin" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">PIN</label>
                    <input type="password" name="pin" required class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
                </div>
                <button class="w-full text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center" type="submit">Ingresar</button>
              </form>
          </div>
      </div>
  </div>
</section>

<script>
  // Fetch API function
  async function postLogin(user: string, pin: string): Promise<boolean> {
    try {
      const response = await fetch('http://44.201.110.95:8080/recharge/code', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ user, pin }),
      });

      if (response.status === 200) {
        return true;
      } else {
        throw new Error(`Login failed: ${response.status}`);
      }
    } catch (error) {
      console.error('Error during login:', error);
      return false;
    }
  }

  // Event listener for form submission
  document.querySelector('.login-form')?.addEventListener('submit', async (event) => {
    event.preventDefault();
    console.log('Form submitted');
    const form = event.currentTarget as HTMLFormElement;
    const cedulaInput = form.querySelector('input[name="documento"]') as HTMLInputElement;
    const pinInput = form.querySelector('input[name="pin"]') as HTMLInputElement;
    const notification = form.querySelector('.notification') as HTMLElement;

    // Hide notification initially
    notification.style.display = 'none';

    const loginSuccessful = await postLogin(cedulaInput.value, pinInput.value);
    if (loginSuccessful) {
      // Store user and pin in local storage
      localStorage.setItem('user', cedulaInput.value);
      localStorage.setItem('pin', pinInput.value);

      // Redirect to password entry screen
      // Assuming '/enter-password' is the route for password entry
      window.location.href = '/enter-password';
    } else {
      // Display error notification
      notification.style.display = 'flex';
    }
  });
</script>